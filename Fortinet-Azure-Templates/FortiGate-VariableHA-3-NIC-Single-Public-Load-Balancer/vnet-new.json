{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "metadata": {
        "description": "Location"
      }
    },
    "vnetName": {
      "type": "string",
      "metadata": {
        "description": "Virtual Network name (e.g. vnet-haivision)"
      }
    },
    "vnetResourceGroup": {
      "type": "string",
      "metadata": {
        "description": "Virtual Network Resource Group"
      }
    },
    "vnetAddressPrefix": {
      "type": "string",
      "metadata": {
        "description": "Virtual Network Address Prefix (i.e. CIDR)"
      }
    },
    "OutsideSubnetName": {
      "type": "string",
      "metadata": {
        "description": "Server will be deployed into this subnet within the Virtual Network"
      }
    },
    "subnet1AddressPrefix": {
      "type": "string",
      "metadata": {
        "description": "Virtual Network subnet Address Prefix (i.e. CIDR)"
      }
    },
    "DMZSubnetName": {
      "type": "string",
      "metadata": {
        "description": "Server will be deployed into this subnet within the Virtual Network"
      }
    },
    "subnet2AddressPrefix": {
      "type": "string",
      "metadata": {
        "description": "Virtual Network subnet Address Prefix (i.e. CIDR)"
      }
    },
    "Subnet3Name": {
      "type": "string",
      "metadata": {
        "description": "Server will be deployed into this subnet within the Virtual Network"
      }
    },
    "subnet3AddressPrefix": {
      "type": "string",
      "metadata": {
        "description": "Virtual Network subnet Address Prefix (i.e. CIDR)"
      }
    },
    "FortinetTags": {
      "type": "object"
    }
  },
  "variables": {
    "vnetID": "[resourceId(parameters('vnetResourceGroup'), 'Microsoft.Network/virtualNetworks', parameters('vnetName'))]",
    "subnet1ID": "[concat(variables('vnetID'),'/subnets/',parameters('OutsideSubnetName'))]",
    "subnet2ID": "[concat(variables('vnetID'),'/subnets/',parameters('DMZSubnetName'))]",
    "apiVer": "2015-06-15"
  },
  "resources": [
    {
      "apiVersion": "[variables('apiVer')]",
      "tags": {
       "provider": "[toUpper(parameters('FortinetTags').provider)]"
      },
      "type": "Microsoft.Network/virtualNetworks",
      "name": "[parameters('vnetName')]",
      "location": "[parameters('location')]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[parameters('vnetAddressPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "[parameters('OutsideSubnetName')]",
            "properties": {
              "addressPrefix": "[parameters('subnet1AddressPrefix')]"
            }
          },
          {
            "name": "[parameters('DMZSubnetName')]",
            "properties": {
              "addressPrefix": "[parameters('Subnet2AddressPrefix')]"
            }
          },
          {
            "name": "[parameters('Subnet3Name')]",
            "properties": {
              "addressPrefix": "[parameters('Subnet3AddressPrefix')]"
            }
          }
        ]
      }
    }
  ]
}
